        <None Remove="Icons\star-ranking.svg"/>
        <AvaloniaResource Include="Icons\star-ranking.svg"/>
        <None Remove="Icons\crown.svg"/>
        <AvaloniaResource Include="Icons\crown.svg"/>
        <None Remove="Icons\meteor.svg"/>
