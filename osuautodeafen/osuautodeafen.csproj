    <ItemGroup>
        <None Update="**\*.lib">
            <CopyToPublishDirectory>Never</CopyToPublishDirectory>
        </None>
    </ItemGroup>

    <ItemGroup>
        <AvaloniaResource Include="Resources\osu_whitestroke.png"/>
